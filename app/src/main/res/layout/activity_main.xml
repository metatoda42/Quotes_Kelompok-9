<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

   <RelativeLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>


    <EditText
        android:background="@drawable/kolom1"
        android:id="@+id/kolom1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:hint="btnReset"
        android:textSize="8dp"
        android:layout_toRightOf="@+id/kolom1"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/kolom1"
        android:layout_below="@+id/kolom1"
        android:id="@+id/kolom2"
        android:layout_width="377dp"
        android:layout_height="350dp"
        android:hint="randQuote"
        android:textSize="80dp"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/kolom1"
        android:layout_below="@+id/kolom2"
        android:id="@+id/kolom3"
        android:layout_width="377dp"
        android:layout_height="70dp"
        android:hint="authQuote"
        android:textSize="30dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/kolom1"
        android:layout_below="@+id/kolom3"
        android:id="@+id/kolom4"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:hint="komQuote"
        android:textSize="30dp"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/button2"
        android:layout_width="75dp"
        android:layout_height="120dp"
        android:hint="btnSave"
        android:textSize="8dp"
        android:layout_below="@+id/kolom3"
        android:layout_toRightOf="@+id/kolom4"
        />

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/purple_200"
            app:menu="@menu/item_menu" />
    </FrameLayout>

</RelativeLayout>